# StarBot Environment Variables Template
# Copy this file to .env and fill in your actual values

# DeepSeek API Key (Required)
# Get your API key from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Model settings
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
LLM_MODEL=deepseek-ai/deepseek-coder-7b-instruct

# Folder settings (relative to project root)
UPLOAD_FOLDER=data/uploads
PROCESSED_FOLDER=processed
LINKS_FILE=data/links/links.txt

# Vector store settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RESULTS=5
VECTOR_STORE_TYPE=chroma
CHROMA_INDEX_FOLDER=data/chroma_index

# App settings
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Note: For Vercel deployment, set these environment variables in your Vercel dashboard:
# 1. Go to your project settings in Vercel
# 2. Navigate to Environment Variables
# 3. Add DEEPSEEK_API_KEY with your actual API key
# 4. Other variables will use defaults from vercel.json
